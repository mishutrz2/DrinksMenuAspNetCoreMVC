@*Define model*@
@model IEnumerable<Drink>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Drinks";
}

@*Write code*@
<h2>Welcome to Drinks View - Index</h2>
<div class="row">
    <div class="col-md-10 offset-md-1">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DrinkImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.DrinkName)</th>
                    <th>@Html.DisplayNameFor(model => model.TypeOfDrink)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.DrinkIngredients)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.DrinkImageUrl" style="display:block;max-width:250px;max-height:220px;width:auto;height:auto;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DrinkName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TypeOfDrink)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DrinkIngredients)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Edit </a>
                            <a class="btn btn-outline-danger"> <i class="bi bi-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>